<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Создание товара -->
    <servlet>
        <servlet-name>ProductCreateServlet</servlet-name>
        <servlet-class>ru.ylab.tasks.task3.servlet.product.ProductCreateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductCreateServlet</servlet-name>
        <url-pattern>/marketplace/products/create</url-pattern>
    </servlet-mapping>

    <!-- Удаление товара -->
    <servlet>
        <servlet-name>ProductDeleteServlet</servlet-name>
        <servlet-class>ru.ylab.tasks.task3.servlet.product.ProductDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductDeleteServlet</servlet-name>
        <url-pattern>/marketplace/products/delete</url-pattern>
    </servlet-mapping>

    <!-- Список товаров -->
    <servlet>
        <servlet-name>ProductListServlet</servlet-name>
        <servlet-class>ru.ylab.tasks.task3.servlet.product.ProductListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductListServlet</servlet-name>
        <url-pattern>/marketplace/products/list</url-pattern>
    </servlet-mapping>

    <!-- Поиск продуктов -->
    <servlet>
        <servlet-name>ProductSearchServlet</servlet-name>
        <servlet-class>ru.ylab.tasks.task3.servlet.product.ProductSearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductSearchServlet</servlet-name>
        <url-pattern>/marketplace/products/search</url-pattern>
    </servlet-mapping>

    <!-- Обновление продукта -->
    <servlet>
        <servlet-name>ProductUpdateServlet</servlet-name>
        <servlet-class>ru.ylab.tasks.task3.servlet.product.ProductUpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductUpdateServlet</servlet-name>
        <url-pattern>/marketplace/products/update</url-pattern>
    </servlet-mapping>

    <!-- Вход пользователя -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ru.ylab.tasks.task3.servlet.user.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/marketplace/auth/login</url-pattern>
    </servlet-mapping>

    <!-- Выход пользователя -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ru.ylab.tasks.task3.servlet.user.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/marketplace/auth/logout</url-pattern>
    </servlet-mapping>

    <!-- Регистрация пользователя -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>ru.ylab.tasks.task3.servlet.user.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/marketplace/auth/register</url-pattern>
    </servlet-mapping>

</web-app>